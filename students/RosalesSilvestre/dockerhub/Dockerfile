FROM alpine:latest


# Actualizamos los repositorios de paquetes e instalamos las dependencias.
RUN apk update && apk add --no-cache openssh-client sshpass

# Establecemos el directorio de trabajo como /app
WORKDIR /app

# Copiamos nuestro script de shell desde el contexto de build (tu m치quina)
# al directorio de trabajo del contenedor.
COPY bandit.sh .

# Nos aseguramos de que el script tenga permisos de ejecuci칩n dentro de la imagen.
RUN chmod +x ./bandit.sh

# El ENTRYPOINT define el comando que se ejecutar치 cuando el contenedor inicie.
# Al usar el formato "exec" (con corchetes), se ejecuta directamente,
# sin un shell intermedio, lo cual es m치s eficiente.
ENTRYPOINT ["./bandit.sh"]
